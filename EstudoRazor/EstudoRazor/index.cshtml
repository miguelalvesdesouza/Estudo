@{
    var head = "App razor";
    var titulo = "Estudo Razor ";
    var x = 0;
    var y = 0;
    var resultado = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        @head
    </title>
</head>
<body>
    <div>
        <h1>@titulo</h1>
        <p>Insira o Valor de X</p>
        <input value="@x" />
        <p>Insira o Valor de Y</p>
        <input value="@y" />
        <button name="Somar" onclick="{@resultado = @x}">Somar</button>
        <p>@resultado</p>
    </div>
</body>
</html>
